<Window x:Class="DermacoSkinClinic.Aboutus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DermacoSkinClinic"
        mc:Ignorable="d"
        Title="About Us" Height="550" Width="800" WindowState="Maximized">
    <Grid x:Name="VV">
        <Grid.Background>
            <ImageBrush ImageSource="/dermaco_background_image.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="53*"/>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="67*"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" Height="414" Margin="45,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="755" Grid.ColumnSpan="4" FontSize="14" RenderTransformOrigin="0.5,0.5">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.401"/>
                    <RotateTransform/>
                    <TranslateTransform X="-1.448"/>
                </TransformGroup>
            </TextBlock.RenderTransform>
            <TextBlock.Background>
                <ImageBrush/>
            </TextBlock.Background><Run/><LineBreak/><Run FontWeight="Bold" Text="About Dermaco Skin Clinic"/><LineBreak/><Run Text="Welcome to Dermaco Skin Clinic, where beauty meets innovation. At Dermaco Skin Clinic, we are committed to helping you achieve the best version of yourself through advanced and personalized skincare solutions."/><LineBreak/><Run FontWeight="Bold"/><LineBreak/><Run FontWeight="Bold" Text="Why Choose Dermaco Skin Clinic?"/><LineBreak/><Run/><LineBreak/><Run FontWeight="Bold" Text="Expertise"/><Run Text=":"/><LineBreak/><Run Text="Our team consists of experienced and highly trained professionals dedicated to delivering exceptional results."/><LineBreak/><Run/><LineBreak/><Run FontWeight="Bold" Text="Advanced Technology:"/><LineBreak/><Run Text="We invest in the latest technologies to provide you with cutting-edge treatments for optimal efficacy and safety."/><LineBreak/><Run/><LineBreak/><Run FontWeight="Bold" Text="Personalized Approach:"/><LineBreak/><Run Text="Every individual is unique, and so are their skincare needs. We take a personalized approach to address your specific concerns and goals."/><LineBreak/><Run/><LineBreak/><Run FontWeight="Bold" Text="Client Satisfaction:"/><LineBreak/><Run Text="Your satisfaction is our priority. We strive to exceed your expectations and provide a positive and comfortable experience."/></TextBlock>
        <Button Content="Close" Margin="0,439,0,65" HorizontalAlignment="Center" Click="CloseButton_Click" Grid.Column="3" Width="75" Height="20"/>
    </Grid>
</Window>