<!-- MainWindow.xaml -->
<Window x:Class="YourNamespace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login Page" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <StackPanel.Background>
                <ImageBrush ImageSource="/dermaco_background_image.jpg"/>
            </StackPanel.Background>
            <Label Content="Username:" Width="85"/>
            <TextBox x:Name="txtUsername" Width="200" Margin="0,0,0,10"/>

            <Label Content="Password:" Width="75"/>
            <PasswordBox x:Name="txtPassword" Width="200" Margin="0,0,0,10"/>
            <Button Content="Login" Click="LoginButton_Click" Width="200"/>
            
            <Button Content="Cancel" Click="Logincancel_Click" Width="200" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
