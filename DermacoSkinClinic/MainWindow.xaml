<Window x:Class="DermacoSkinClinic.AppointmentForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dermaco Clinic Appointment" Height="925" Width="720" Background="White">
    <Window.Resources>
        <ImageBrush x:Key="BackgroundBrush" ImageSource="/DermacoSkinClinic;component/dermaco_background_image.jpg"/>
    </Window.Resources>

    <ScrollViewer Background="{StaticResource BackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="100*"/>
            </Grid.RowDefinitions>
            <!-- Customer Information Section -->
            <StackPanel Margin="5,-6,15,-115" RenderTransformOrigin="0.5,0.5" Grid.RowSpan="2">
                <StackPanel.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="-0.061"/>
                        <RotateTransform/>
                        <TranslateTransform X="0.499"/>
                    </TransformGroup>
                </StackPanel.RenderTransform>
                <TextBlock FontWeight="Bold" Margin="0,0,0,5"><Run Text="Customer Information:"/></TextBlock>

                <TextBlock Width="193" Text="First Name:" Height="18"/>
                <TextBox x:Name="FirstNameTextBox" Width="200" Margin="5,0,0,0"/>

                <TextBlock Width="193" Text="Last Name:" Height="28"/>
                <TextBox x:Name="LastNameTextBox" Width="200" Margin="5,0,0,0"/>

                <TextBlock Width="202" Text="Email:"/>
                <TextBox x:Name="EmailTextBox" Width="200" Margin="5,0,0,0"/>

                <TextBlock Width="197" Text="Phone:"/>
                <TextBox x:Name="PhoneTextBox" Width="200" Margin="5,0,0,0"/>
                <TextBlock Width="194" Text="Contact Preference:"/>

                <CheckBox Content="Email" x:Name="EmailContactCheckBox" Width="56"/>
                <CheckBox Content="Phone" x:Name="PhoneContactCheckBox" Width="57"/>


                <TextBlock Width="100" Text="Postal Code:" VerticalAlignment="Center"/>
                <TextBox x:Name="PostalCodeTextBox" Width="200" Margin="5,0,0,0"/>

                <TextBlock Width="100" Text="Date of Birth:" VerticalAlignment="Center"/>
                <DatePicker x:Name="DOBDatePicker" Width="200" Margin="5,0,0,0"/>

                <TextBlock Width="100" Text="Procedure Interest:" VerticalAlignment="Center"/>
                <ComboBox x:Name="ProcedureComboBox" Width="200" Margin="5,0,0,0">
                    <ComboBoxItem Content="Laser Hair Removal"/>
                    <ComboBoxItem Content="Laser Skin Whitening"/>
                    <ComboBoxItem Content="PNP Hair Treatment"/>
                    <ComboBoxItem Content="Chemical Peel"/>
                    <ComboBoxItem Content="Consultation"/>
                </ComboBox>


                <TextBlock Width="100" Text="Appointment Date and Time:" VerticalAlignment="Center"/>
                <DatePicker x:Name="AppointmentDateTimePicker" Width="120" Margin="5,0,0,0"/>
                <ComboBox x:Name="AppointmentTimeComboBox" Width="80" Margin="5,0,0,0">
                    <ComboBoxItem Content="10:00 AM"/>
                    <ComboBoxItem Content="11:00 AM"/>
                </ComboBox>

                <TextBlock Width="100" Text="Comments:" VerticalAlignment="Top"/>
                <TextBox x:Name="CommentsTextBox" Width="380" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Height="100" Margin="5,0,0,0" UndoLimit="90"/>



                <CheckBox x:Name="EmailSubscriptionCheckBox" Content="Email me news and special offers" VerticalAlignment="Center"/>

                <CheckBox x:Name="TermsCheckBox" Content="By checking this box, you agree to the Terms of Use."/>

                <Button Content="Submit Appointment" Click="SubmitAppointment_Click"/>
            </StackPanel>

            <!-- Search and Filter Section -->
            <StackPanel Margin="30,595,38,10" Grid.Row="1">
                <TextBlock FontWeight="Bold" Margin="0,0,0,5" Height="31" Width="630"><Run Text="Search and Filter:"/></TextBlock>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6*"/>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="24*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="YourPlaceholderTextHere" Foreground="Gray" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0" Grid.ColumnSpan="2"/>
                    <TextBox x:Name="SearchTextBox" VerticalAlignment="Center" Grid.ColumnSpan="3" />
                </Grid>
                <ComboBox x:Name="FilterComboBox" Margin="0,0,0,5">
                    <ComboBoxItem Content="Filter by Name"/>
                    <ComboBoxItem Content="Filter by Email"/>
                </ComboBox>
                <Button Content="Apply Filter" Click="ApplyFilter_Click" />
                <!--<Button Content="Clear Filter" Click="ClearButton_Click" Grid.Column="3" Margin="5,0,0,0"/>-->
                <Button Content="Clear" Click="ClearButton_Click"/>

                <DataGrid x:Name="AppointmentDataGrid" AutoGenerateColumns="True"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
