<Window x:Class="DermacoSkinClinic.AppointmentForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dermaco Clinic Appointment" Height="450" Width="600" Background="White">
    <Window.Resources>
        <ImageBrush x:Key="BackgroundBrush" ImageSource="/DermacoSkinClinic;component/dermaco_background_image.jpg"/>

    </Window.Resources>
    <Grid>
        <Grid.Background>
            <StaticResource ResourceKey="BackgroundBrush"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="115"/>
            <ColumnDefinition Width="45"/>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="120.208"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>

        <!-- Customer Information Section -->
        <StackPanel Grid.Column="1" Margin="0,10,10,10" Grid.ColumnSpan="4">
            <TextBlock FontWeight="Bold" Margin="0,0,0,5">Customer Information:</TextBlock>
            <StackPanel>
                <TextBlock>First Name:</TextBlock>
                <TextBox x:Name="FirstNameTextBox" />
            </StackPanel>
            <StackPanel>
                <TextBlock>Appointment Date and Time:</TextBlock>
                <StackPanel Orientation="Horizontal">
                    <DatePicker x:Name="AppointmentDateTimePicker" />
                    <ComboBox x:Name="AppointmentTimeComboBox">
                        <!-- Add your time options here -->
                        <ComboBoxItem Content="10:00 AM"/>
                        <ComboBoxItem Content="11:00 AM"/>
                        <!-- Add more time options as needed -->
                    </ComboBox>
                </StackPanel>
            </StackPanel>
            <StackPanel>
                <TextBlock>Comments:</TextBlock>
                <TextBox x:Name="CommentsTextBox" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Height="100"/>
            </StackPanel>
            <StackPanel>
                <CheckBox x:Name="EmailSubscriptionCheckBox" Content="Email me news and special offers"/>
            </StackPanel>
            <StackPanel>
                <CheckBox x:Name="TermsCheckBox" Content="By checking this box, you agree to the Terms of Use."/>
                <Button Content="Submit Appointment" Click="SubmitAppointment_Click" Margin="0,10,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- Search and Filter Section -->
        <StackPanel Grid.Column="5" Margin="10,10,10,40" Grid.ColumnSpan="2">
            <TextBlock FontWeight="Bold" Margin="0,0,0,5">Search and Filter:</TextBlock>
            <!-- Add search and filter controls here based on your requirements -->
            <Grid>
                <TextBlock Text="YourPlaceholderTextHere" Foreground="Gray" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0"/>
                <TextBox x:Name="SearchTextBox" Margin="0,0,0,5" VerticalAlignment="Center" HorizontalAlignment="Stretch" />
            </Grid>
            <ComboBox x:Name="FilterComboBox" Margin="0,0,0,5">
                <ComboBoxItem Content="Filter by Name"/>
                <ComboBoxItem Content="Filter by Email"/>
                <!-- Add more filter options as needed -->
            </ComboBox>
            <Button Content="Apply Filter" Click="ApplyFilter_Click" />
            <DataGrid x:Name="AppointmentDataGrid" AutoGenerateColumns="True"/>
            <!-- DataGrid to display appointment data -->
        </StackPanel>
    </Grid>
</Window>